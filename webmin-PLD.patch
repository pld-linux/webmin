+	if ($?) { return $out; }
+	}
+return undef;
+}
+
+# copy_group_quota(group, [group]+)
+# Copy the quotas for some group to many others
+sub copy_group_quota
+{
+for($i=1; $i<@_; $i++) {
+	$out = `$config{'group_copy_command'} $_[0] $_[$i] 2>&1`;
+	if ($?) { return $out; }
+	}
