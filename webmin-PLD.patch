+if ($_[0]->{'domain'}) {
+	if ($_[0]->{'domain'}->[1]) {
+		print RESOLV "search ",join(" ", @{$_[0]->{'domain'}}),"\n";
+		}
+	else {
+		print RESOLV "domain $_[0]->{'domain'}->[0]\n";
+		}
+	}
+foreach (@resolv) {
+	print RESOLV $_ if (!/^\s*(nameserver|domain|search)\s+/);
